@model BurlOakMovers.ViewModels.AddEventModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div id="calendar"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">$times;</button>
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <button id="btnEdit" class="btn btn-success btn-sm pull-right">
                    <span class="glyphicon glyphicon-pencil"></span>Edit
                </button>
                <button id="btnDelete" class="btn btn-danger btn-sm pull-right">
                    <span class="glyphicon glyphicon-remove"></span>Delete
                </button>
                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="saveModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">$times;</button>
                <h4 class="modal-title"><span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    @Html.HiddenFor(model => model.EventId, new { id = "eventId" })
                    <div class="form-group">
                        @Html.LabelFor(expression: model => model.Subject, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(expression: model => model.Subject, htmlAttributes: new { @class = "form-control", id = "txtSubject" })
                        @Html.ValidationMessageFor(expression: model => model.Subject, validationMessage: null, htmlAttributes: new { @class = "text-danger" })
                    </div>
                    <div class=" form-group">
                        <div class="input-group" id="startDate">
                            @Html.LabelFor(expression: model => model.StartDate, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(expression: model => model.StartDate, htmlAttributes: new { @class = "form-control", id = "txtStart" })
                            @Html.ValidationMessageFor(expression: model => model.StartDate, validationMessage: null, htmlAttributes: new { @class = "text-danger" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label><input type="checkbox" id="chFullDay" checked="checked" />Full Day?</label>
                        </div>
                    </div>
                    <div class=" form-group" id="divEndDate" style="display: none">
                        <div class="input-group" id="endDate">
                            @Html.LabelFor(expression: model => model.EndDate, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(expression: model => model.EndDate, htmlAttributes: new { @class = "form-control", id = "txtEnd" })
                            @Html.ValidationMessageFor(expression: model => model.EndDate, validationMessage: null, htmlAttributes: new { @class = "text-danger" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(expression: model => model.Description, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(expression: model => model.Description, htmlAttributes: new { @class = "form-control", id = "txtDescription" })
                        @Html.ValidationMessageFor(expression: model => model.Description, validationMessage: null, htmlAttributes: new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("ddThemeColor", new List<SelectListItem>

                 {
                    new SelectListItem{ Text="Red", Value = "red" },
                    new SelectListItem{ Text="Blue", Value = "blue" }
                 })
                    </div>
                    <button type="button" id="btnSave" class="btn btn-success">Save</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.min.css" rel="stylesheet" />
<link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.print.css" rel="stylesheet" media="print" />
<link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />

@section scripts {
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.min.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>

    <script>
        $(document).ready(function () {
            var events = [];
            var selectedEvent = null;
            FetchEventsAndCal();
            function FetchEventsAndCal() {
                events = [];
                $.ajax({
                    type: "GET",
                    url: "/Calendar/GetEvents",
                    success: function (data) {
                        $.each(data, function (i, v) {
                            events.push({
                                id: v.id,
                                title: v.Subject,
                                description: v.Description,
                                start: moment(v.Start),
                                fullDay: v.IsFullDay,
                                end: v.End != null ? moment(v.End) : null,
                                color: v.ThemeColor
                            });
                        })
                        GenerateCalendar(events);
                    },
                    error: function (error) {
                        alert('failed');
                    }
                })
            }
            function GenerateCalendar(events) {
                $('#calendar').fullCalendar('destroy');
                $('#calendar').fullCalendar({
                    contentHeight: 400,
                    defaultDate: new Date(),
                    timeFormat: 'h(:mm)a',
                    header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month, basicWeek, basicDay, agenda'
                    },
                    eventLimit: true,
                    eventColor: '#378006',
                    events: events,
                    eventClick: function (calEvent, jsEvent, view) {
                        selectedEvent = calEvent;
                        $('#myModal #eventTitle').text(calEvent.title);
                        var $description = $('<div/>');
                        $description.append($('<p/>').html('<b>Start:</b>' + calEvent.start.format("DD-MM-YYYY HH:mm a")));
                        if (calEvent.end != null) {
                            $description.append($('<p/>').html('<b>End:</b>' + calEvent.end.format("DD-MM-YYYY HH:mm a")));
                        }
                        $description.append($('<p/>').html('<b>Description:</b>' + calEvent.description));
                        $('#myModal #pDetails').empty().html($description);

                        $('#myModal').modal();
                    },
                    selectable: true,
                    select: function (start, end) {
                        selectedEvent = {
                            id: 0,
                            title: '',
                            description: '',
                            start: start,
                            end: end,
                            fullDay: false,
                            color: ''
                        };
                        openAddEdit();
                        $('#calendar').fullCalendar('unselect');
                    }

                })
            }

            $('#btnDelete').click(function () {
                if (selectedEvent != null && confirm('Are you sure?')) {
                    $.ajax({
                        type: "POST",
                        url: "/Calendar/DeleteEvent",
                        data: { 'id': selectedEvent.id },
                        success: function (data) {
                            if (data.success) {
                                FetchEventsAndCal();
                                $('#myModal').modal('hide');
                            }

                        },
                        error: function () {
                            alert('Failed');
                        }
                    })
                }
            })


            $('#btnEdit').click(function () {
                openAddEdit();
            })

            $('#startDate, #endDate').datetimepicker({
                format: 'DD/MM/YYYY HH:mm A'
            });

            $('#chFullDay').change(function () {
                if ($(this).is(':checked')) {
                    $('#divEndDate').hide();
                } else {
                    $('#divEndDate').show();
                }
            })
            function openAddEdit() {
                if (selectedEvent != null) {
                    $('#eventId').val(selectedEvent.id);
                    $('#txtSubject').val(selectedEvent.title);
                    $('#txtStart').val(selectedEvent.start.format('DD/MM/YYYY HH:mm A'));
                    $('#chFullDay').prop("checked", selectedEvent.fullDay || false);
                    $('#chFullDay').change();
                    $('#txtEnd').val(selectedEvent.end != null ? selectedEvent.end.format('DD/MM/YYYY HH:mm A') : '');
                    $('#txtDescription').val(selectedEvent.description);
                    $('#ddThemeColor').val(selectedEvent.color);

                }
                $('#myModal').modal('hide');
                $('#saveModal').modal();
            }

            $('#btnSave').click(function () {
                if ($('#txtSubject').val().trim() == "") {
                    alert('Subject is required');
                    return;
                }
                if ($('#txtStart').val().trim() == "") {
                    alert('Start date is required');
                    return;
                }
                if ($('#chFullDay').is(':checked') == false && $('#txtEnd').val().trim() == "") {
                    alert('End date is required');
                    return;
                }
                else {
                    var startDate = moment($('#txtStart').val(), "DD/MM/YYYY HH:mm A").toDate();
                    var endDate = moment($('#txtEnd').val(), "DD/MM/YYYY HH:mm A").toDate();
                    if (startDate < endDate) {
                        alert('Start date cannot be after end date');
                        return;
                    }
                }
                
                var formData = {
                    id: $('#eventId').val(),
                    Subject: $('#txtSubject').val().trim(),
                    Start: moment($('#txtStart').val(), "DD/MM/YYYY HH:mm A").toDate(),
                    //Start: moment($('#txtStart').val(), "DD/MM/YYYY HH:mm A").toDate(),
                    End: $('#chFullDay').is(':checked') ? null : $('#txtEnd').val().trim(),
                    Description: $('#txtDescription').val(),
                    ThemeColor: $('#ddThemeColor').val(),
                    IsFullDay: $('#chkFullDay').is(':checked')

                }

                console.log(formData.Start);
                SaveEvent(formData);
                $('#saveModal').modal().hide();
            })

            function SaveEvent(formData) {
                $.ajax({
                    type: "POST",
                    url: "/Calendar/SaveEvent",
                    data: formData,
                    success: function (data) {
                        if (data.success) {
                            FetchEventsAndCal();
                            $('#saveModal').modal('dispose');
                        }

                    },
                    error: function () {
                        alert('Failed');
                    }
                })
            }
        })
    </script>
}
